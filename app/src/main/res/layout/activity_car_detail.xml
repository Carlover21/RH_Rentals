<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- âœ… Fix ViewPager2 -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp" />

        <!-- Car Name -->
        <TextView
            android:id="@+id/txtCarName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Name"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Car Price -->
        <TextView
            android:id="@+id/txtCarPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price per day: $100"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <!-- Car Description -->
        <TextView
            android:id="@+id/txtCarDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car description goes here."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Book Now Button -->
        <Button
            android:id="@+id/btnBookNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BOOK NOW"
            android:backgroundTint="#001F54"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:elevation="4dp"
            android:layout_marginBottom="10dp" />

        <!-- Edit Car Button -->
        <Button
            android:id="@+id/btnEditCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDIT CAR"
            android:backgroundTint="#FFA500"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:elevation="4dp" />
    </LinearLayout>

</ScrollView>

