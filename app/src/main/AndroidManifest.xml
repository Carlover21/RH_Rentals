<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RH_Rentals"
        tools:targetApi="31">

        <!-- Main Activity Declaration -->
        <!-- This is the launcher activity for the app -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.RH_Rentals">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Car List Activity Declaration -->
        <!-- Activity for displaying the list of cars -->
        <activity
            android:name=".CarListActivity"
            android:exported="true"
            android:label="Car List"
            android:theme="@style/Theme.RH_Rentals" />

        <!-- Booking Activity Declaration -->
        <!-- Activity for handling car bookings -->
        <activity
            android:name=".BookingActivity"
            android:exported="true"
            android:label="Booking"
            android:theme="@style/Theme.RH_Rentals" />

        <!-- Car Detail Activity Declaration -->
        <!-- Activity for displaying car details -->
        <activity
            android:name=".CarDetailActivity"
            android:exported="true"
            android:label="Car Details"
            android:theme="@style/Theme.RH_Rentals" />

    </application>

</manifest>
